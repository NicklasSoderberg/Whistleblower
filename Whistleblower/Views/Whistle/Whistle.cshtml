@model Whistleblower.ViewModels.WhistleViewModel

@{
    ViewBag.Title = "Whistle";
}



    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-titel">
            <img src="~/images/omegapoint.png">
            @*<img src="@String.Format("data:image/png;base64,{0}", DBHandler.GetFileFromID(44))" />*@
            <h4>Beskriv ditt ärende</h4>
            <p>Tänk på att beskriva ditt ärende så noggrant som möjligt för att underlätta vår utredning.</p>
        </div>
        <hr />
        <div class="form-holder">
            <div class="form-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @using (Html.BeginForm("WhistleConfirm", "Whistle", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.RequiredLabelFor(model => model.Whistle.About, htmlAttributes: new { @class = "" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.DropDownListFor(m => m.Whistle.About, new SelectList(Model.Whistle.Subjects), "", new { htmlAttributes = new { @class = "combobox" } })
                            @Html.ValidationMessageFor(model => model.Whistle.About, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.RequiredLabelFor(model => model.Whistle.When, htmlAttributes: new { @class = "" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Whistle.When, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Whistle.When, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.RequiredLabelFor(model => model.Whistle.Where, htmlAttributes: new { @class = "" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Whistle.Where, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Whistle.Where, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.RequiredLabelFor(model => model.Whistle.Description, htmlAttributes: new { @class = "" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Whistle.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Whistle.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @Html.RequiredLabelFor(model => model.Whistle.Description_OtherEmployees, htmlAttributes: new { @class = "" })
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Whistle.Description_OtherEmployees, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Whistle.Description_OtherEmployees, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5">
                            <input type="submit" name="button" value="Nästa" class="btn btn-default" />
                        </div>
                    </div>

                }
            </div>
            </div>
    </div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
